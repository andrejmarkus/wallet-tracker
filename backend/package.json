{
  "name": "@wallet-tracker/backend",
  "private": true,
  "version": "1.0.0",
  "description": "Backend for Wallet Tracker application",
  "main": "server.ts",
  "scripts": {
    "test": "dotenv -e .env.test -- jest",
    "build": "dotenv -e .env.production -- tsc",
    "dev": "dotenv -e .env.development -- nodemon --watch **/*.ts --exec ts-node --files server.ts",
    "lint": "eslint . --fix --ext .ts",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.production -- prisma migrate dev",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "prisma:studio:dev": "dotenv -e .env.development -- prisma studio",
    "prisma:studio:prod": "dotenv -e .env.production -- prisma studio",
    "prisma:studio:test": "dotenv -e .env.test -- prisma studio",
    "prisma:format": "prisma format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@eslint/js": "^9.27.0",
    "@metaplex-foundation/js": "^0.20.1",
    "@prisma/client": "6.8.2",
    "@solana/web3.js": "^1.98.2",
    "@types/cors": "^2.8.18",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "grammy": "^1.36.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "socket.io": "^4.8.1",
    "ws": "^8.18.2",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.15.21",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
