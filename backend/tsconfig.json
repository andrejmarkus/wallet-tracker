{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "**/*.ts",
    "types/**/*.d.ts"
, "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
